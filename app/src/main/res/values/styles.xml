<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#bbb8b5</item>
        <item name="colorPrimaryDark">#8b8885</item>
        <item name="colorAccent">#edeae7</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TopPicksCard">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="TopPicksImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TopPicksText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">4dp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:textColor">#8b8885</item>
    </style>

    <style name="TopPicksLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:letterSpacing">0.1</item>

    </style>

    <style name="CategoryCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="cardBackgroundColor">#FFF</item>
    </style>

    <style name="CategoryCardFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="CategoryCardImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
