<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name ="android:windowActivityTransitions">true</item>
    </style>

    <style name="TopPicksCard">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="TopPicksImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TopPicksText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopPicksLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CategoryCard">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="CategoryCardFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategoryCardImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

</resources>
