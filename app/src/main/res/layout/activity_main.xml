<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_top_picks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="TOP PICKS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_1"
                    android:src="@drawable/chinos_1_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_1"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_2"
                    android:src="@drawable/shoes_2_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_2"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_3"
                    android:src="@drawable/shirt_4_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_3"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/shirt_9_1"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="Shirts"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/chinos_6_1"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="Trousers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/shoes_1_1"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="sneakers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>