<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/text_top_picks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oswald"
        android:textFontWeight="500"
        android:textColor="#292929"
        android:textSize="22sp"
        android:letterSpacing="0.1"
        android:text="TOP PICKS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_1"
                    android:src="@drawable/chinos_1_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_1"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_2"
                    android:src="@drawable/shoes_2_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_2"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_3"
                    android:src="@drawable/shirt_4_1"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_3"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:background="#e9e9e9"
            android:layout_width="360dp"
            android:layout_height="2px"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp" />

        <TextView
            style="@style/CategoryTitle"
            android:layout_gravity="center_horizontal"
            android:text="Categories">
        </TextView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/shirt_9_1"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="Shirts"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/chinos_2_1"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="Trousers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            android:id="@+id/cvCategory3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/CategoryCardImage"
                    android:src="@drawable/shoes_5_3"/>

                <TextView
                    style="@style/CategoryCardFont"
                    android:text="sneakers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>