<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_top_picks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="TOP PICKS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_1"
                    android:src="@drawable/adidas_yeezy"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_1"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_2"
                    android:src="@drawable/adidas_yeezy"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_2"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/TopPicksCard"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/TopPicksLayout">

                <ImageView
                    style="@style/TopPicksImage"
                    android:id="@+id/image_top_picks_3"
                    android:src="@drawable/adidas_yeezy"/>
                <TextView
                    style="@style/TopPicksText"
                    android:id="@+id/text_top_picks_3"
                    android:text="Best Seller"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/adidas_yeezy"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Shoes and Sneakers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/adidas_yeezy"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Shoes and Sneakers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CategoryCard"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/adidas_yeezy"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Shoes and Sneakers"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>